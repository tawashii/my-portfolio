{
  "name": "my-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run generate-sitemap",
    "build": "cross-env NODE_ENV=production vite build",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "postbuild": "npm run optimize",
    "optimize": "npm run optimize:js && npm run optimize:css && npm run optimize:images",
    "optimize:js": "terser dist/assets/js/*.js -c -m -o dist/assets/js/*.js",
    "optimize:css": "postcss dist/assets/css/*.css --replace --use cssnano",
    "optimize:images": "node scripts/optimize-images.js",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "lighthouse": "lighthouse http://localhost:4173 --view --output-path=./lighthouse-report.html",
    "a11y": "pa11y http://localhost:4173 --runner axe",
    "test:performance": "npm run build && npm run preview -- --port 4173 && npm run lighthouse",
    "test:a11y": "npm run build && npm run preview -- --port 4173 && npm run a11y",
    "generate-sitemap": "node scripts/generate-sitemap.js"
  },
  "dependencies": {
    "framer-motion": "^12.15.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-scroll": "^1.9.3"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@csstools/postcss-relative-color-syntax": "^3.0.10",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "cssnano": "^7.0.7",
    "eslint": "^9.28.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "lighthouse": "^12.6.0",
    "pa11y": "^9.0.0",
    "postcss": "^8.5.4",
    "postcss-preset-env": "^10.2.0",
    "prettier": "^3.5.3",
    "purgecss": "^7.0.2",
    "terser": "^5.40.0",
    "vite": "^6.3.5",
    "web-vitals": "^5.0.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
